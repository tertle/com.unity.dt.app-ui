.appui-navhost__item__container > .appui-appbar {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
}

.appui-navigation-screen__bottom-nav-bar {
    display: none;
}

.appui-navigation-screen--with-bottom-nav-bar > .appui-navigation-screen__right-container > .appui-navigation-screen__bottom-nav-bar {
    display: flex;
}

.appui-navigation-screen__drawer {
    display: none;
}

.appui-navigation-screen--with-drawer--left > .appui-navigation-screen__right-container > .appui-navigation-screen__drawer,
.appui-navigation-screen--with-drawer--right > .appui-navigation-screen__right-container > .appui-navigation-screen__drawer {
    display: flex;
}
